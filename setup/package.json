{
  "name": "fortify-setup",
  "version": "1.0.0",
  "description": "GitHub Action for setting up Fortify tools",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/main.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write **/*.ts",
    "prepare": "cd .. && husky install setup/.husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fortify/github-action.git"
  },
  "keywords": [
    "Fortify",
    "FoD",
    "security"
  ],
  "author": "Ruud Senden",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fortify/github-action/issues"
  },
  "homepage": "https://github.com/fortify/github-action#README.md",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/io": "^1.1.3",
    "@actions/tool-cache": "^2.0.1"
  },
  "devDependencies": {
    "@types/node": "^16.11.56",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "@vercel/ncc": "0.31.1",
    "eslint": "^7.32.0",
    "husky": "^7.0.4",
    "prettier": "^2.7.1",
    "typescript": "4.4.3"
  }
}
