{
  "name": "fortify-setup",
  "version": "1.0.0",
  "description": "GitHub Action for setting up Fortify tools",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/setup.ts -o dist --minify --source-map",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write **/*.ts",
    "clean": "rm -rf dist",
    "update-deps": "npm update"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fortify/github-action.git"
  },
  "keywords": [
    "Fortify",
    "FoD",
    "security"
  ],
  "author": "Ruud Senden",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fortify/github-action/issues"
  },
  "homepage": "https://github.com/fortify/github-action#README.md",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@fortify/setup": "^0.0.18"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  }
}
